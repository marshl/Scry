<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/results_name_background"
    android:orientation="horizontal"
    android:padding="10dp" >
 
    <TextView
        android:id="@+id/results_group_cardname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:text="@string/results_group_card_name_default"
        android:textColor="#ffffffff"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/results_group_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/results_group_card_cost_default"
        android:textColor="#ffffffff"
        android:textStyle="bold" />
    
</LinearLayout>
